<?xml version="1.0" encoding="utf-8" ?>
<root>
    <people>
        <displayname>People</displayname>
        <displayone>Person</displayone>
        <alias>%name% %surname%</alias>
        <table>People</table>   
        <columns>
            <name>
                <displayname>Name</displayname>
                <type>varchar</type>
                <length>20</length>
                <allowempty>false</allowempty>
                <unique>false</unique>
                <showinlist>true</showinlist>
            </name>
            <surname>
                <displayname>Surname</displayname>
                <type>varchar</type>
                <length>20</length>
                <allowempty>false</allowempty>
                <unique>false</unique>
                <showinlist>true</showinlist>
            </surname>
            <gender>
                <displayname>Gender</displayname>
                <type>select</type>
                <options>
                    <male>
                        <text>Male</text>
                    </male>
                    <female>
                        <text>Female</text>
                    </female>
                </options>
                <allowempty>false</allowempty>
                <unique>false</unique>
                <showinlist>true</showinlist>
            </gender>
            <cardnumber>
                <displayname>Card number</displayname>
                <type>int</type>
                <length>20</length>
                <allowempty>false</allowempty>
                <unique>true</unique>
                <min>0</min>
                <max>1000</max>
                <showinlist>true</showinlist>
            </cardnumber>
            <birth>
                <displayname>Date of birth</displayname>
                <type>date</type>
                <allowempty>true</allowempty>
                <unique>false</unique>
                <showinlist>true</showinlist>
            </birth>
            <goodboy>
                <displayname>Is good boy</displayname>
                <type>bool</type>
                <on>
                    <text>Good boy</text>
                    <style>success</style>
                </on>
                <off>
                    <text>Bad boy</text>
                    <style>danger</style>
                </off>
                <allowempty>false</allowempty>
                <unique>false</unique>
                <showinlist>false</showinlist>
            </goodboy>
        </columns>
        <description>People bla bla bla bla bla bla bla bla bla bla bla bla</description>
        <orderby>
            <column>surname</column>
            <reverse>false</reverse>
        </orderby>
        <searchminrows>1</searchminrows>
        <searchhint>Search people...</searchhint>
        <random>2</random>
        <add>Add person</add>
        <new>New person</new>
        <edit>Edit person</edit>
    </people>
    <payments>
        <displayname>Payments</displayname>
        <displayone>Payment</displayone>
        <alias>%subject%</alias>
        <table>Payments</table>
        <columns>
            <subject>
                <displayname>Subject</displayname>
                <type>varchar</type>
                <length>100</length>
                <allowempty>false</allowempty>
                <unique>true</unique>
                <showinlist>true</showinlist>
            </subject>
        </columns>
        <description>Payments bla bla bla bla bla bla bla bla bla bla bla bla</description>
        <searchminrows>5</searchminrows>
        <searchhint>Search payments...</searchhint>
        <random>3</random>
        <add>Add payment</add>
        <new>New payment</new>
        <edit>Edit payment</edit>
    </payments>
    <certificates>
        <displayname>Certificates</displayname>
        <displayone>Certificate</displayone>
        <alias>%name%</alias>
        <table>Certificates</table>
        <columns>
            <name>
                <displayname>Subject</displayname>
                <type>varchar</type>
                <length>100</length>
                <allowempty>false</allowempty>
                <unique>true</unique>
                <showinlist>true</showinlist>
            </name>
        </columns>
        <description>Certificates bla bla bla bla bla bla bla bla bla bla bla bla</description>
        <searchminrows>5</searchminrows>
        <searchhint>Search certificates...</searchhint>
        <random>1</random>
        <add>Add certificate</add>
        <new>New certificate</new>
        <edit>Edit certificate</edit>
    </certificates>
    <photos>
        <displayname>Photos</displayname>
        <displayone>Photo</displayone>
        <alias>%name%</alias>
        <table>Photos</table>
        <columns>
            <name>
                <displayname>Name</displayname>
                <type>varchar</type>
                <length>100</length>
                <allowempty>false</allowempty>
                <unique>true</unique>
                <showinlist>true</showinlist>
            </name>
        </columns>
        <description>Photos bla bla bla bla bla bla bla bla bla bla bla bla</description>
        <searchminrows>5</searchminrows>
        <searchhint>Search photos...</searchhint>
        <random>1</random>
        <add>Add photo</add>
        <new>New photo</new>
        <edit>Edit photo</edit>
    </photos>
</root>