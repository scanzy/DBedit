<?xml version="1.0" encoding="utf-8" ?>
<root>
    <payments-people>
        <description>
            <people>Payments of %alias%</people>
            <payments>People who payed %alias%</payments>
        </description>
        <displayname>%payments% payed by %people%</displayname>
        <link1>people</link1>
        <link2>payments</link2>
        <table>PeoplePayments</table>
        <columns>
            <notes>
                <displayname>Notes</displayname>
                <type>text</type>
                <length>200</length>
                <allowempty>true</allowempty>
                <unique>false</unique>
            </notes>
        </columns>
        <orderby>
            <people>
                <column>id1</column>
                <reverse>false</reverse>
            </people>
            <payments>
                <column>id2</column>
                <reverse>false</reverse>
            </payments>
        </orderby>
        <searchminrows>5</searchminrows>
        <random>3</random>
        <add>
            <people>Add payment of %alias%</people>
            <payments>Add person who payed %alias%</payments>
        </add>
    </payments-people>
    <certificates-people>
        <description>
            <people>Certificates of %alias%</people>
            <certificates>People with %alias%</certificates>
        </description>
        <displayname>%certificates% of %people%</displayname>
        <link1>people</link1>
        <link2>certificates</link2>
        <table>CertificatesPeople</table>
        <columns>
            <notes>
                <displayname>Notes</displayname>
                <type>string</type>
                <length>200</length>
                <allowempty>true</allowempty>
                <unique>false</unique>
            </notes>
        </columns>
        <searchminrows>5</searchminrows>
        <random>2</random>
        <add>
            <people>Add certificate of %alias%</people>
            <certificates>Add %alias% for person</certificates>
        </add>
    </certificates-people>
</root>